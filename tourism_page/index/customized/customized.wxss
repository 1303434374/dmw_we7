page {
    background: #f6f6f6;
}

.swiper_wrap {
    width: 100vw;
    height: 422rpx;
}

.slide-image {
    width: 100vw;
    height: 422rpx;
}

.slide-image>image {
    width: 100%;
    height: 100%;
}

.swiper-item {
    position: relative;
}

.swiperIdx-box {
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
}

.swiperIdx {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background: #fff;
    margin-right: 30rpx;
}

.swiperIdx:last-child {
    margin-right: 0;
}

.currentIdx {
    width: 50rpx;
    border-radius: 4px;
    background: #fff;
}

.nearby-play {
    width: 100vw;
    background: #fff;
    margin-bottom: 20rpx;
    padding-bottom: 4vw;
}

.nearby-play-tit {
    position: relative;
    width: 92vw;
    height: 70rpx;
    padding: 0 4vw;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    border-bottom: 1px solid #eee;
}

.nearby-play-tit-left {
    width: 6rpx;
    height: 28rpx;
    background: #15e4d1;
    margin-right: 10rpx;
}

.nearby-play-tit-right {
    font-size: 24rpx;
    color: #999;
    margin-left: 30rpx;
}

.nearby-play-more {
    position: absolute;
    right: 4vw;
    top: 50%;
    transform: translateY(-50%);
    font-size: 24rpx;
    color: #15e4d1;
}

.nearby-play-cont {
    width: 92vw;
    padding: 0 4vw;
    overflow: hidden;
}

.nearby-play-item {
    float: left;
    margin: 4vw 4vw 0 0;
}

.nearby-play-item:nth-child(2n) {
    margin-right: 0;
}

.nearby-play-item-img>image {
    width: 328rpx;
    height: 184rpx;
}

.nearby-play-name {
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
    text-align: center;
    color: #666;
}

.bottomNav {
    width: 94vw;
    padding: 20rpx 3vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    background: #fff;
}

.currentNav {
    color: #15e4d1;
}

.boutique {
    width: 100vw;
    margin-bottom: 20rpx;
}

.boutique-tit {
    width: 90vw;
    height: 70rpx;
    padding: 0 5vw;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    background: #fff;
}

.boutique-tit-left {
    width: 4rpx;
    height: 28rpx;
    background: #15e4d1;
    margin-right: 10rpx;
}

.boutique-tit-right {
    font-size: 20rpx;
    color: #999;
    margin-left: 30rpx;
}

.boutique-item {
    position: relative;
    width: 100vw;
    background: #fff;
}

.boutique-img {
    position: relative;
    width: 100vw;
    height: 350rpx;
    overflow: hidden;
}

.triangle {
    position: absolute;
    z-index: 99;
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
    border-left: 26rpx solid transparent;
    border-right: 26rpx solid transparent;
    border-bottom: 24rpx solid #fff;
}

.etime {
    position: absolute;
    z-index: 99;
    right: 0;
    top: 0;
    background: #ef5d5e;
    color: #fff;
    font-size: 20rpx;
    padding: 4rpx 10rpx;
}

.imgInfor {
    width: 100vw;
    height: 100%;
    background: rgba(0,0,0,0.2);
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-size: 28rpx;
}

.main-tit {
    font-size: 48rpx;
    margin: 8% 0 16rpx 0;
}

.sub-tit {
    width: 80vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 10rpx;
}

.multiplayer-played {
    position: absolute;
    text-align: center;
    bottom: 118rpx;
}

.takePart-sum {
    position: absolute;
    bottom: 40rpx;
    width: 90vw;
    padding: 0 5vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.takePart-left {
    display: flex;
    align-items: center;
}

.takePart-left>image,.omitted {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    box-sizing: border-box;
    border: 1px solid #fff;
    margin-left: -10rpx;
}

.takePart-left>image:first-child {
    margin-left: 0;
}

.omitted {
    color: #fff;
    text-align: center;
    line-height: 52rpx;
    background: #eee;
    font-size: 30rpx;
}

.takePart-right {
    color: #fff;
    font-size: 28rpx;
}

.boutique-price-btn {
    width: 90vw;
    padding: 0 5vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.boutique-price-btn-left {
    display: flex;
    flex-direction: column;
}

.optional {
    display: flex;
    align-items: center;
    margin-top: 10rpx;
    color: #fff;
}

.optional-left {
    width: 51vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 20rpx;
    background: #ccc;
    padding: 2rpx 8rpx;
    margin-right: 8rpx;
}

.optional-right {
    font-size: 26rpx;
    background: #15e4d1;
    padding: 2rpx 8rpx;
}

.boutique-price {
    font-size: 22rpx;
    color: #333;
    margin-bottom: 10rpx;
}

.boutique-price>text:first-of-type {
    margin-right: 20rpx;
}

.priceAfDiscount {
    color: #ef5d5e;
    font-size: 34rpx;
    font-weight: bold;
}

.nowTakePart {
    font-size: 26rpx;
    color: #fff;
    background: #ef5d5e;
    border-radius: 24rpx;
    padding: 16rpx 30rpx;
}

.bottom-item {
    position: relative;
    width: 94vw;
    padding: 3vw;
    border-top: 1px solid #ddd;
    background: #fff;
    display: flex;
}

.item-img {
    width: 320rpx;
    height: 180rpx;
    margin-right: 3vw;
}

.item-img>image {
    width: 100%;
    height: 100%;
}

.item-info {
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
}

.item-label,.item-name {
    width: 46vw;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    font-size: 24rpx;
    color: #999;
    line-height: 38rpx;
}

.item-name {
    margin-bottom: 10rpx;
    -webkit-line-clamp: 1;
}

.item-label>view {
    color: #b1b1b1;
    padding: 0 10rpx;
    border: 1px solid #b1b1b1;
    margin-right: 20rpx;
}

.item-price {
    position: absolute;
    right: 3vw;
    bottom: 20rpx;
    color: red;
    font-size: 26rpx;
    text-align: right;
}

.custom-img {
    position: fixed;
    right: 2vw;
    top: 50%;
    transform: translateY(-50%);
    width: 100rpx;
    height: 100rpx;
}

.custom-img>image {
    width: 100%;
    height: 100%;
}