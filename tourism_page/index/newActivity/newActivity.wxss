page {
    background: #eee;
}

.container {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 80000;
    background: #fff;
}

.progress_box {
    position: absolute;
    width: 220px;
    height: 440rpx;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    align-items: center;
    justify-content: center;
}

.progress_bg {
    position: absolute;
    width: 220px;
    height: 220px;
}

.progress_canvas {
    width: 220px;
    height: 220px;
}

.progress_text {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -28%;
}

.progress_info {
    font-size: 30rpx;
    padding-left: 16rpx;
    letter-spacing: 2rpx;
}

.progress_dot {
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background-color: #15e4d1;
}

.left-scroll {
    float: left;
    width: 22vw;
    height: 100vh;
    background: #fff;
}

.city-box {
    width: 80%;
    padding: 20rpx 0;
    margin: 0 auto;
    border-bottom: 2px solid #eee;
    text-align: center;
}

.city-box:last-child {
    border-bottom: none;
}

.city {
    position: relative;
    font-size: 32rpx;
}

.currentCity {
    color: #15e4d1;
}

.border-right {
    position: absolute;
    right: -10%;
    top: 59%;
    transform: translateY(-50%);
    width: 4rpx;
    height: 44rpx;
    background: #15e4d1;
}

.right-img {
    float: right;
    width: 76vw;
    height: 100vh;
}

.city-img {
    background: #fff;
}

.img-box {
    position: relative;
    width: 526rpx;
    padding: 3vw 0 0 0;
    margin: 0 auto;
    font-size: 0;
    background: #fff;
}

.img-box:last-child {
    margin-bottom: 3vw;
}

.img-box>image {
    width: 100%;
    height: 280rpx;
}

.img-mask {
    position: absolute;
    top: 3vw;
    width: 100%;
    height: 280rpx;
    background: rgba(0,0,0,0.3);
    color: #fff;
}

.bottom_ {
    width: 96%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    padding: 10rpx 0;
}

.bottom_left>view {
    display: flex;
    align-items: center;
}

.bottom_left>view:first-child view:first-child {
    margin-right: 10rpx;
    color: #ef5d5e;
}

.bottom_left>view:first-child view:last-child {
    color: #999;
}

.bottom_left>view:last-child {
    font-size: 24rpx;
    margin-top: 10rpx;
    color: #999;
}

.bottom_left>view:last-child view:first-child {
    margin-right: 10rpx;
}

.bottom_left>view:last-child view:last-child {
    width: 30vw;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.bottom_right {
    padding: 20rpx;
    background: #ef5d5e;
    color: #fff;
    border-radius: 10rpx;
}

.f-tit {
    position: absolute;
    width: 80%;
    left: 10%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    top: 22%;
    font-size: 34rpx;
}

.main-tit {
    width: 80%;
    left: 10%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    position: absolute;
    top: 45%;
    font-size: 30rpx;
}

.sub-tit {
    position: absolute;
    width: 80%;
    left: 10%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    bottom: 20%;
    font-size: 28rpx;
}

.dayclock {
    position: absolute;
    right: 2%;
    top: 8%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
    color: #fff;
}

.dayclock_time {
    padding: 10rpx 20rpx;
    background: #ef5d5e;
    border-radius: 10rpx;
    margin-top: 4rpx;
    font-size: 26rpx;
}

.no_img {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #999;
}

.slide_nav {
    position: fixed;
    z-index: 9999;
    right: 3%;
    top: 50%;
    transform: translateY(-50%);
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    font-size: 30rpx;
    text-align: center;
    line-height: 130rpx;
    background: #15e4d1;
    color: #fff;
    box-shadow: 6rpx 0rpx 8rpx 0 #666;
}

.type_item {
    position: fixed;
    z-index: 9999;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 90rpx;
    background: #15e4d1;
    color: #fff;
    font-size: 26rpx;
}

.bargain_tpye {
    top: 37%;
    left: 70%;
}

.teamwork_tpye {
    top: 55%;
    left: 70%;
}

.all_type {
    top: 46%;
    left: 63%;
}

.sele_type {
    color: #eee;
    background: #62b5f8;
}

.return_idx {
    position: fixed;
    z-index: 999;
    top: 60%;
    transform: translateY(-50%);
    right: 6.5%;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: #15e4d1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.return_idx image {
    width: 60rpx;
    height: 60rpx;
}

.lookMore {
    text-align: center;
    font-size: 28rpx;
    padding: 20rpx 0;
    background: #eee;
    color: #999;
}