page {
    background: #eee;
}

.left-scroll {
    float: left;
    width: 22vw;
    height: 100vh;
    background: #fff;
}

.city-box {
    width: 80%;
    padding: 20rpx 0;
    margin: 0 auto;
    border-bottom: 2px solid #eee;
    text-align: center;
}

.city-box:last-child {
    border-bottom: none;
}

.city {
    position: relative;
    font-size: 32rpx;
}

.currentCity {
    color: #15e4d1;
}

.border-right {
    position: absolute;
    right: -10%;
    top: 59%;
    transform: translateY(-50%);
    width: 4rpx;
    height: 44rpx;
    background: #15e4d1;
}

.right-img {
    float: right;
    width: 76vw;
    background: #fff;
    height: 100vh;
}

.img-box {
    position: relative;
    width: 526rpx;
    height: 280rpx;
    padding: 3vw 0 0 0;
    margin: 0 auto;
}

.img-box:last-child {
    margin-bottom: 3vw;
}

.img-box>image {
    width: 100%;
    height: 100%;
}

.img-mask {
    position: absolute;
    top: 3vw;
    width: 100%;
    height: 93%;
    background: rgba(0,0,0,.3);
    color: #fff;
}

.main-tit {
    text-align: center;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    font-size: 32rpx;
}

.sub-tit {
    text-align: center;
    position: relative;
    top: 59%;
    transform: translateY(-50%);
    font-size: 28rpx;
}

.no_img {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #999;
}

.slide_nav {
    position: fixed;
    z-index: 9999;
    right: 3%;
    top: 5vh;
    width: 150rpx;
    height: 50rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 50rpx;
    background: #fff;
    box-shadow: 0 6rpx 8rpx 0 #000;
    border-top-left-radius: 6rpx;
    border-top-right-radius: 6rpx;
}

.type_list {
    position: absolute;
    top: 52rpx;
    width: 100%;
}

.type_item {
    width: 100%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    margin-bottom: 2rpx;
    background: #fff;
    box-shadow: 0 0 8rpx 0 #000;
}

.type_item:last-child {
    box-shadow: 0 6rpx 8rpx 0 #000;
}

.lookMore {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    margin: 20rpx 0;
}