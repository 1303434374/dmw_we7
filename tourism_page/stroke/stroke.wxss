page {
    background: #f6f6f6;
}

.topSearch {
    position: absolute;
    z-index: 99;
    top: 0;
    width: 92vw;
    padding: 20rpx 4vw 20rpx;
    display: flex;
    justify-content: center;
    background: rgba(0,0,0,.3);
}

.searchInput {
    position: relative;
    background: rgba(255,255,255,.3);
    width: 100%;
    height: 60rpx;
    border-radius: 5px;
    padding-left: 13%;
}

.searchInput>image {
    position: absolute;
    left: 7%;
    top: 52%;
    transform: translateY(-50%);
    width: 32rpx;
    height: 31rpx;
}

.searchInput>input {
    font-size: 28rpx;
    color: #fff;
    width: 100%;
    height: 100%;
}

.swiper_wrap {
    position: relative;
    width: 100vw;
    height: 422rpx;
}

.slide-image {
    width: 100vw;
    height: 422rpx;
}

.slide-image>image {
    width: 100%;
    height: 100%;
}

.swiper-item {
    position: relative;
}

.swiperIdx-box {
    position: absolute;
    z-index: 100;
    left: 50%;
    bottom: 40rpx;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
}

.swiperIdx {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background: #fff;
    margin-right: 30rpx;
}

.swiperIdx:last-child {
    margin-right: 0;
}

.currentIdx {
    width: 44rpx;
    border-radius: 10px;
    background: #fff;
}

.sortList-box {
    background: #fff;
    height: 328rpx;
    margin-bottom: 10rpx;
}

.topImg {
    width: 94vw;
    padding: 3vw;
}

.topImg-top {
    width: 100%;
    height: 284rpx;
    margin-bottom: 3vw;
}

.topImg-top>image {
    width: 100%;
    height: 100%;
}

.topImg-bottom {
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
}

.topImg-bottom>image {
    width: 45.5vw;
    height: 100%;
}

page {
    background: #fff;
}

.dynamic-item {
    width: 100vw;
    margin-bottom: 20rpx;
}

.dynamic-item:last-child {
    margin-bottom: 0;
}

.dynamic-top {
    width: 94vw;
    padding: 30rpx 3vw 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.dynamic-left {
    display: flex;
    align-items: center;
    position: relative;
}

.userAvatarUrl {
    margin-right: 20rpx;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    overflow: hidden;
}

.userAvatarUrl>image {
    width: 100%;
    height: 100%;
}

.userGender {
    position: absolute;
    left: 20%;
    bottom: 0;
    width: 26rpx;
    height: 26rpx;
}

.nameAndTime {
    display: flex;
    flex-direction: column;
}

.nickName {
    font-size: 28rpx;
}

.time {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #a3a3a3;
}

.dynamic-right {
    border: 1px solid #15e4d1;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: #15e4d1;
    padding: 14rpx 30rpx;
}

.dynamic-text {
    width: 94vw;
    height: 95rpx;
    display: -webkit-box;
    line-height: 50rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 3vw;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.dynamic-img {
    width: 94vw;
    margin: 20rpx auto 0;
    padding-bottom: 20rpx;
}

.dynamic-img-item {
    display: inline-flex;
    margin-right: 1vw;
}

.dynamic-img-item:nth-child(3n) {
    margin-right: 0;
}

.dynamic-img-item>image {
    width: 30.6vw;
    height: 30.6vw;
}

.dynamic-infor {
    border-bottom: 1px solid #f4f4f4;
    border-top: 1px solid #f4f4f4;
    width: 94vw;
    padding: 20rpx 0;
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    font-size: 26rpx;
}

.dynamic-infor>view {
    display: flex;
    align-items: center;
}

.dynamic-infor>view>image {
    margin-right: 8rpx;
}

.browse>image {
    width: 36rpx;
    height: 36rpx;
}

.comment>image {
    width: 36rpx;
    height: 29rpx;
}

.like>image {
    width: 30rpx;
    height: 32rpx;
}

.currentIdx {
    width: 44rpx;
    border-radius: 10px;
    background: #fff;
}

.lookMore {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    margin: 20rpx 0;
}