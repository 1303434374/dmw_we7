.footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 10rpx;
    box-sizing: border-box;
    background: #fff;
    border-top: 1rpx solid #C5C5C5;
    z-index: 5555;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.footer view {
    display: inline-block;
}

.footer view image {
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin: 0 auto;
}

.footer view text {
    display: block;
    width: 100%;
    font-size: 22rpx;
    color: #AFAFAF;
    text-align: center;
    margin-top: 5rpx;
}

.footer view .sel_color {
    color: #04a9f0;
}

.copy {
    text-align: center;
    font-size: 28rpx;
    margin-top: 30rpx;
}

.copy .fuhao {
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    border: transparent;
}

.nomore {
    line-height: 80rpx;
    height: 80rpx;
    text-align: center;
    position: relative;
    font-size: 30rpx;
    width: 100%;
    background: #f0f0f0;
    color: #B3B3B3;
}

.nomore::before {
    content: "";
    display: block;
    width: 100rpx;
    height: 2rpx;
    background: #B3B3B3;
    position: absolute;
    left: 180rpx;
    top: 50%;
}

.nomore::after {
    content: "";
    display: block;
    width: 100rpx;
    height: 2rpx;
    background: #B3B3B3;
    position: absolute;
    right: 180rpx;
    top: 50%;
}