@import "../../../__wuBaseWxss__/3.wxss";

@import "../../strategy/strategy.wxss";

page {
    padding-bottom: 80rpx;
}

.content {
    margin-top: 20rpx;
}

.up {
    width: 100%;
    height: 420rpx;
    position: relative;
}

.up .bg {
    width: 100%;
    height: 420rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.up .person_head {
    width: 100%;
    text-align: center;
    color: #fff;
    padding-top: 60rpx;
}

.up .person_head .head_img {
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto;
    border: 10rpx solid rgba(92,152,203,1);
    border-radius: 50%;
    margin-bottom: 10rpx;
}

.up .person_head .head_img image {
    border-radius: 50%;
}

.up .person_head .name,.up .person_head .cost {
    margin-bottom: 10rpx;
}

.up .tel {
    position: absolute;
    top: 50rpx;
    right: 20rpx;
    width: 50rpx;
    height: 50rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
    padding: 5rpx;
    text-align: center;
}

.up .tel image {
    width: 40rpx;
    height: 40rpx;
}

.title {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #535353;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #F2F2F2;
    margin-left: 20rpx;
}

.title .t_left image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.content .top .intro {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    white-space: normal;
    width: 96%;
}

.top .item_money {
    right: 20rpx;
    top: 0;
    background: none;
    position: absolute;
    font-size: 34rpx;
    font-weight: bold;
}

.lijigoumai {
    width: 100%;
    overflow: hidden;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
}

.lijigoumai-jine {
    width: 70%;
    padding: 20rpx;
    font-size: 28rpx;
    color: #000;
    float: left;
    box-sizing: border-box;
    border-top: 1rpx solid #535353;
}

.lijigoumai-btn {
    width: 30%;
    box-sizing: border-box;
    padding: 22rpx;
    float: right;
    background: #1285F8;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}

.jianjie {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 20rpx solid #eee;
}

.jianjie-top {
    width: 100%;
    overflow: hidden;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F2F2F2;
}

.jianjie-top .lf {
    float: left;
    width: 50%;
    font-size: 28rpx;
    color: #000;
}

.jianjie-top .lf image {
    width: 35rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.jianjie-top .rt {
    float: right;
    width: 40rpx;
    height: 40rpx;
    margin-top: -10rpx;
}

.jianjie-bottom {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #535353;
    letter-spacing: 3rpx;
    line-height: 45rpx;
}

.list-item {
    width: 94vw;
    margin: 20rpx auto;
    position: relative;
    height: 396rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.list-item>image {
    width: 100%;
    height: 100%;
}

.list-item-mask {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    background: rgba(0,0,0,.2);
    box-sizing: border-box;
    padding: 0 20rpx 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    color: #fff;
    font-size: 26rpx;
}

.list-titAndPrice {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 14rpx;
}

.list-profile {
    width: 94%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
}