page {
    background: #f6f6f6;
}

.searchPage-item {
    position: relative;
    width: 100vw;
    height: 422rpx;
    margin-bottom: 20rpx;
}

.search-img {
    width: 100%;
    height: 100%;
}

.searchPage-item-info {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    font-size: 24rpx;
}

.searchPage-item-info>view {
    width: 54vw;
}

.info-tit {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    color: #000;
    margin-bottom: 10rpx;
}

.notSearchCont {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    font-size: 40rpx;
    color: #acacac;
    display: flex;
    align-items: center;
    flex-direction: column;
}