.classic-cont {
    width: 94vw;
    padding: 0 3vw;
}

.classic-item {
    width: 100%;
    padding: 20rpx 0 30rpx;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #f6f6f6;
}

.classic-item:last-child {
    border-bottom: none;
}

.classic-item>image {
    width: 100%;
    height: 470rpx;
    margin-bottom: 20rpx;
}

.classic-introduction {
    font-size: 28rpx;
    text-align: center;
}