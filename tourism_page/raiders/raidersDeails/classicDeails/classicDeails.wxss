page {
    width: 90vw;
    padding: 20rpx 5vw;
}

.articleTit {
    padding-bottom: 20rpx;
    font-size: 30rpx;
}

.editInfor {
    display: flex;
    align-items: center;
}

.edit-avatarUrl {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
}

.edit-avatarUrl>image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.edit-name,.edit-readSum {
    margin-right: 10rpx;
    color: #999;
    font-size: 26rpx;
}

.article-img {
    width: 90vw;
    height: 350rpx;
    margin: 20rpx 0;
}

.article-img>image {
    width: 100%;
    height: 100%;
}

.article-text {
    font-size: 28rpx;
    line-height: 46rpx;
}