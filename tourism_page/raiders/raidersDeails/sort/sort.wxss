page {
    background: #f6f6f6;
}

.topNav {
    width: 94vw;
    padding: 20rpx 3vw 0;
    display: flex;
    background: #fff;
    border-bottom: 1px solid #f6f6f6;
}

.nav-box {
    position: relative;
    width: 23.5vw;
    font-size: 30rpx;
}

.nav {
    width: 58%;
    margin: 0 auto;
    padding-bottom: 20rpx;
    text-align: center;
}

.navLine {
    position: absolute;
    right: 0;
    top: 0;
    width: 2rpx;
    height: 70%;
    background: #cacaca;
}

.currentNav {
    color: #15e4d1;
    border-bottom: 1px solid #15e4d1;
}

.nav-cont {
    margin-top: 20rpx;
}

.theme-item {
    background: #fff;
    width: 100vw;
    margin-bottom: 20rpx;
}

.theme-item-img-box {
    position: relative;
    width: 100vw;
    height: 422rpx;
}

.theme-item-img {
    width: 100%;
    height: 100%;
}

.theme-item-mask {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    color: #fff;
}

.theme-item-tit {
    position: absolute;
    left: 50%;
    top: 30%;
    width: 80%;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    transform: translateX(-50%);
    font-size: 44rpx;
}

.theme-item-tit1 {
    position: absolute;
    left: 50%;
    top: 53%;
    width: 80%;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    transform: translateX(-50%);
    font-size: 34rpx;
}

.theme-item-tit2 {
    font-size: 28rpx;
    position: absolute;
    left: 50%;
    top: 72%;
    width: 76vw;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    transform: translateX(-50%);
    text-align: center;
}

.priceAndBtn-left>view:last-child {
    display: flex;
    align-items: center;
}

.priceAndBtn-left>view:last-child>view {
    max-width: 50%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.countdown {
    position: absolute;
    right: 3vw;
    top: 10rpx;
    color: #fff;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.day {
    background: #ef5d5e;
    border-radius: 4px;
    padding: 10rpx;
    font-size: 30rpx;
    margin-top: 10rpx;
    display: flex;
    align-items: center;
}

.day>text:first-child {
    margin-right: 4rpx;
}

.priceAndBtn {
    width: 94vw;
    padding: 20rpx 3vw;
    display: flex;
    justify-content: space-between;
    color: #666;
}

.priceAndBtn-left {
    width: 74vw;
}

.teamwork_price {
    margin-right: 20rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}

.teamwork_price>view:first-child {
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}

.priceAndBtn-right {
    color: #fff;
    background: #ef5d5e;
    border-radius: 10px;
    font-size: 32rpx;
    width: 20vw;
    display: flex;
    align-items: center;
    justify-content: center;
}

.boutique-item {
    position: relative;
    width: 100vw;
    margin-bottom: 10rpx;
}

.boutique-img {
    position: relative;
    width: 100vw;
    height: 422rpx;
    overflow: hidden;
}

.imgInfor {
    width: 100vw;
    height: 100%;
    background: rgba(0,0,0,0.2);
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
}

.main-tit {
    position: relative;
    top: 50%;
    width: 80vw;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transform: translateY(-50%);
    font-size: 40rpx;
}

.sub-tit {
    position: relative;
    top: 58%;
    transform: translateY(-50%);
    width: 80vw;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 800;
    background: #f0f0f0;
}

.progress_box {
    position: absolute;
    width: 220px;
    height: 440rpx;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    align-items: center;
    justify-content: center;
}

.progress_bg {
    position: absolute;
    width: 220px;
    height: 220px;
}

.progress_canvas {
    width: 220px;
    height: 220px;
}

.progress_text {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -28%;
}

.progress_info {
    font-size: 30rpx;
    padding-left: 16rpx;
    letter-spacing: 2rpx;
}

.progress_dot {
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background-color: #15e4d1;
}

.lookMore {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    margin: 20rpx 0;
}