page {
    background: #f5f5f5;
}

.bill-tit {
    width: 90vw;
    padding: 10rpx 5vw;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bill-tit-left {
    color: #9e9e9e;
    font-size: 22rpx;
}

.currentMonth {
    color: #000;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}

.allBillBtn {
    width: 40rpx;
}

.consum-cont {
    width: 100vw;
    min-height: 80vh;
    background: #fff;
}

.consum-cont-item {
    width: 95vw;
    padding: 20rpx 0 0 5vw;
    display: flex;
    align-items: center;
}

.consumImg-box {
    width: 18vw;
}

.consumImg {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}

.consumInfor {
    width: 72vw;
    padding: 0 5vw 20rpx 0;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    justify-content: space-between;
}

.consumPeople {
    font-size: 32rpx;
}

.consumType {
    font-size: 24rpx;
    margin: 10rpx 0;
}

.consumTime {
    font-size: 24rpx;
    color: #adadad;
}

.consum-price {
    font-weight: bold;
    font-size: 38rpx;
}