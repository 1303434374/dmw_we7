page {
    background: #f5f5f5;
}

.recharge {
    width: 92vw;
    padding: 40rpx 0;
    margin: 30rpx auto;
    background: #fff;
}

.recharge-tit {
    position: relative;
    text-align: center;
    font-size: 30rpx;
}

.tips {
    position: absolute;
    left: 20vw;
}

.recharge-cont {
    width: 74vw;
    margin: 40rpx auto 0;
}

.recharge-cont-tit {
    font-size: 30rpx;
}

.price {
    height: 80rpx;
    display: flex;
    align-items: center;
    padding: 30rpx 0 20rpx 0;
    border-bottom: 1px solid #e8e8e8;
}

.price>text {
    font-size: 70rpx;
}

.price>input {
    width: 80%;
    height: 80rpx;
    font-size: 80rpx;
}

.allPrice {
    width: 65vw;
    margin: 10rpx auto 0;
    font-size: 28rpx;
}

.sendBtn {
    width: 65vw;
    padding: 10rpx 0;
    background: #15e4d1;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
    border-radius: 20px;
    margin: 20rpx auto 0;
}