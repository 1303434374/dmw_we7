page {
    background: #f5f5f5;
}

.container {
    width: 100vw;
}

.partSales-tit {
    width: 92vw;
    padding: 0 4vw;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
}

.currentTit {
    border-bottom: 1px solid #15e4d1;
    color: #15e4d1;
}

.allOrders {
    width: 98vw;
}

.order-item {
    margin-top: 20rpx;
    background: #fff;
    position: relative;
}

.order-top-box {
    width: 90vw;
    padding: 20rpx 5vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.userInfor {
    display: flex;
    align-items: center;
}

.avatarUrl {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin: 0 20rpx 0 0rpx;
    overflow: hidden;
}

.avatarUrl image {
    width: 100%;
    height: 100%;
}

.nickName {
    font-size: 26rpx;
}

.order-status {
    font-size: 28rpx;
    color: #999;
}

.order {
    position: relative;
    width: 93vw;
    padding: 2vw 2vw 2vw 5vw;
    display: flex;
    align-items: center;
    background: #f5f5f5;
}

.orderImg {
    max-width: 160rpx;
    height: 160rpx;
}

.orderInfor {
    height: 100%;
    font-size: 26rpx;
    margin-left: 20rpx;
}

.order-options,.order-num {
    margin: 10rpx 0;
}

.order-bottom-box {
    width: 90vw;
    padding: 20rpx 5vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
}

.orderRecord {
    font-size: 28rpx;
    color: #666;
}

.brokerage {
    position: absolute;
    right: 3vw;
    bottom: 2vh;
    font-size: 28rpx;
    color: #000;
}

.order-btn {
    display: flex;
    font-size: 28rpx;
}

.delOrder,.goEvaluation {
    border: 1px solid;
    border-radius: 20px;
    padding: 4rpx 24rpx;
    margin-left: 20rpx;
}

.goEvaluation {
    border-color: #15e4d1;
    color: #15e4d1;
}

.notOrder {
    width: 100vw;
    text-align: center;
    font-size: 32rpx;
    color: #666;
}

.notOrder>image {
    width: 150rpx;
    margin: 250rpx 0 20rpx;
}