page {
    background: #f6f6f6;
}

view text {
    font-size: 30rpx;
}

.userInfor {
    background: #289Af6;
    width: 90vw;
    height: 180rpx;
    padding: 0 5vw;
}

.avatarUrl {
    float: left;
    position: relative;
}

.avatarUrl-img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
}

.avatarUrl-img>image {
    width: 100%;
    height: 100%;
}

.VIPUser {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: -14rpx;
    bottom: 6rpx;
}

.nameAndTel {
    float: left;
    margin: 4% 0 0 6%;
    color: #fff;
}

.nickName {
    font-size: 34rpx;
    margin-bottom: 20rpx;
}

.tel {
    font-size: 32rpx;
}

.codeAndMore {
    float: right;
    padding: 9% 0 0 0;
    display: flex;
    align-items: center;
}

.codeAndMore .more {
    width: 24rpx;
    height: 42rpx;
}

.myMoney {
    width: 90vw;
    padding: 0 5vw;
    height: 120rpx;
    display: flex;
    border-bottom: 1px solid #e9e9e9;
    background: #fff;
}

.myConsumption {
    width: 29vw;
    height: 80rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    border-right: 1px solid #ccc;
}

.myConsumption:last-child {
    border-right: none;
}

.myConsumption text:last-of-type {
    color: #999;
}

.myList {
    width: 95vw;
    padding: 0 0 0 5vw;
    border-top: 1px solid #e9e9e9;
    background: #fff;
    margin-top: 20rpx;
}

.myList-item {
    position: relative;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.myUnderling-img {
    width: 15%;
}

.myUnderling-img>image {
    width: 50rpx;
    height: 60rpx;
}

.myUnderling {
    width: 80%;
    padding-right: 5%;
    height: 98rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.myUnderling-name {
    font-size: 28rpx;
}

.myUnderling-more {
    width: 24rpx;
    height: 42rpx;
}

.myUnderling-more>image {
    width: 100%;
    height: 100%;
}

button[open-type='contact'] {
    position: absolute;
    left: 0;
    z-index: 5;
    width: 100%;
    height: 100%;
    background: none;
}

button[open-type='contact']::after {
    border: none;
}

.modal {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 900;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.m_box {
    background: #fff;
    width: 70%;
    padding: 20rpx 0;
    padding-bottom: 10rpx;
    text-align: center;
}

.m_box_title {
    font-size: 32rpx;
}

.m_box_nr {
    font-size: 28rpx;
    padding: 20rpx 0;
}

.border_top_2 {
    border-top: 2rpx solid #f3f3f3;
}

.m_btn {
    background: #fff;
    border: none;
    color: #EC6464;
    line-height: 2em;
}

.m_btn::after {
    border: none;
    width: 0;
    height: 0;
}

.container {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999999;
    background: #fff;
}

.progress_box {
    position: absolute;
    width: 220px;
    height: 440rpx;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    align-items: center;
    justify-content: center;
}

.progress_bg {
    position: absolute;
    width: 220px;
    height: 220px;
}

.progress_canvas {
    width: 220px;
    height: 220px;
}

.progress_text {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -28%;
}

.progress_info {
    font-size: 30rpx;
    padding-left: 16rpx;
    letter-spacing: 2rpx;
}

.progress_dot {
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background-color: #289Af6;
}


