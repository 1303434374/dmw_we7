page {
    background: #f6f6f6;
}

.order-item {
    position: relative;
    width: 94vw;
    margin: 20rpx auto;
    box-sizing: border-box;
    border-radius: 10px;
    background: #fff;
    font-size: 28rpx;
    padding: 0 0 20rpx 0;
    overflow: hidden;
    color: #888;
}

.order-item>view {
    padding: 10rpx 20rpx;
}

.order-item>.order-tit {
    margin-top: 0;
    padding: 20rpx;
    background: #15e4d1;
    color: #fff;
    font-size: 34rpx;
}

.reset-order {
    display: flex;
    align-items: center;
}

.reset-order>view:first-child {
    margin-right: 40rpx;
}

.order-item>.order-tel {
    margin: 0 0;
    justify-content: space-between;
}

.order-tel>view:last-child {
    color: #15e4d1;
}

.order-item>.order-line {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%);
    height: 2rpx;
    width: 86%;
    background: #f6f6f6;
    padding: 0;
}

.order-item>.order-text {
    margin-top: 22rpx;
}

.order-item>.circle {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    background: #f6f6f6;
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
    padding: 0;
}

.left-circle {
    left: -15rpx;
}

.right-circle {
    right: -15rpx;
}

.notOrder {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100vw;
    text-align: center;
    font-size: 32rpx;
    color: #666;
}

.notOrder>image {
    width: 150rpx;
    height: 158rpx;
}