page {
    background: #f5f5f5;
}

.groupStatus {
    width: 80vw;
    padding: 0 10vw;
    background: #15e4d1;
    height: 170rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.successImg {
    width: 143rpx;
}

.Nosuccess {
    width: 106rpx;
}

.groupSuccess {
    color: #fff;
    font-size: 28rpx;
}

.groupSuccess>view:first-of-type {
    font-size: 38rpx;
    margin-bottom: 26rpx;
}

.order-address {
    position: relative;
    width: 100vw;
    height: 120rpx;
    background: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.address-img {
    width: 34rpx;
    margin: 0 5vw 0 3vw;
}

.address-deails {
    font-size: 30rpx;
}

.address-deails>view:first-of-type {
    margin-bottom: 10rpx;
}

.changeAddress {
    position: absolute;
    right: 3vw;
    bottom: 20rpx;
    font-size: 26rpx;
    color: #999;
    text-decoration: underline;
}

.order-deails {
    width: 100vw;
    background: #fff;
    margin-bottom: 20rpx;
}

.order-titInfor {
    width: 95vw;
    height: 80rpx;
    border-bottom: 1px solid #999;
    padding: 0 3vw 0 2vw;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.tit-left {
    font-size: 26rpx;
    display: flex;
    align-items: center;
}

.tit-left>image {
    width: 42rpx;
}

.tit-right {
    font-size: 28rpx;
    color: red;
}

.order {
    position: relative;
    width: 90vw;
    padding: 0 5vw;
    height: 170rpx;
    background: #f5f5f5;
    margin: 30rpx 0 0 0;
}

.orderImg {
    float: left;
    width: 140rpx;
    height: 140rpx;
    margin-top: 15rpx;
}

.orderInfor {
    float: left;
    font-size: 26rpx;
    margin: 22rpx 0 0 20rpx;
}

.order-options {
    margin: 15rpx 0 15rpx 16rpx;
}

.order-priceAndSum {
    margin-left: 16rpx;
}

.payPrice {
    width: 95vw;
    text-align: right;
    font-size: 26rpx;
    padding: 12rpx 5vw 12rpx 0;
}

.contact-seller {
    width: 100vw;
    height: 100rpx;
    background: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.contact-seller>view {
    position: relative;
    width: 50vw;
    display: flex;
    justify-content: center;
    font-size: 30rpx;
    box-sizing: border-box;
    border-right: 1px solid #ccc;
}

.contact-seller>view>image {
    width: 42rpx;
}

.contact-seller>view>button {
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
    background: none;
}

.contact-seller>view>button::after {
    border: none;
}

.contact-seller>view:last-child {
    border-right: none;
}

.order-record {
    position: relative;
    width: 98vw;
    padding: 20rpx 0 20rpx 2vw;
    background: #fff;
    position: relative;
    font-size: 26rpx;
    color: #666;
    display: flex;
    flex-direction: column;
}

.order-record view {
    margin: 0 0 6rpx 0;
}

.order-record view:last-of-type {
    margin: 0;
}

.copyBtn {
    position: absolute;
    right: 10vw;
    top: 20rpx;
    border-radius: 2px;
    border: 1px solid #666;
    padding: 4rpx 8rpx;
}

.againBtn {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 100rpx;
    background: #fff;
}

.againBtn view {
    position: absolute;
    right: 3vw;
    top: 20rpx;
    width: 150rpx;
    height: 60rpx;
    background: red;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    border-radius: 5px;
}

.againGroup view {
    width: 210rpx;
}