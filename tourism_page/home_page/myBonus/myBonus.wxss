page {
    background: #f5f5f5;
}

.bonusTop {
    position: relative;
    width: 100vw;
    padding: 30rpx 0 40rpx 0;
    background: #15e4d1;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #d7e8fc;
    font-size: 30rpx;
    margin: 20rpx 0;
}

.commission {
    color: #fff;
    font-size: 56rpx;
    margin-bottom: 20rpx;
}

.withdrawDetails {
    position: absolute;
    right: 5vw;
    top: 10rpx;
    font-size: 22rpx;
}

.resetBonus {
    width: 90vw;
    padding: 20rpx 5vw;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #e0e0e0;
    font-size: 28rpx;
}

.availableBonus,.soonAvailableBonus {
    margin-bottom: 20rpx;
}

.resetBonus>view:first-child {
    display: flex;
}

.resetBonus>view:first-child>image {
    margin-right: 20rpx;
    width: 35rpx;
}

.soonAvailableBonus {
    border-bottom: 1px solid #e0e0e0;
}

.userNotice {
    width: 90vw;
    padding: 20rpx 5vw;
    background: #fff;
    font-size: 28rpx;
    color: #666;
}