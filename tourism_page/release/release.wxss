page {
    background: #fff;
}

.userText {
    width: 90vw;
    padding: 30rpx 5vw 0;
}

.userText>textarea {
    width: 100%;
    min-height: 30vh;
    font-size: 28rpx;
}

.upLoad {
    width: 94vw;
    padding: 0 3vw;
    overflow: hidden;
}

.upLoad-img {
    float: left;
    position: relative;
    margin: 0 20rpx 10rpx 0;
}

.upLoad-img:nth-child(4n) {
    margin-right: 0;
}

.cancel-box {
    position: absolute;
    top: 4rpx;
    right: 4rpx;
    border-radius: 50%;
    width: 16px;
    height: 16px;
    background: rgba(0,0,0,.5);
}

.cancel-box icon {
    position: absolute;
    top: 0;
}

.upLoad-img>image {
    width: 160rpx;
    height: 160rpx;
}

.btn {
    width: 94vw;
    padding: 0 3vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 0;
}

.upLoad-btn {
    display: flex;
}

.take-pic {
    width: 140rpx;
    height: 140rpx;
    border: 1px solid #15e4d1;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999;
}

.take-pic>image {
    width: 50%;
    margin-bottom: 10rpx;
}

.upLoad-pic {
    position: relative;
    margin-left: 20rpx;
}

.horizontal {
    width: 100rpx;
    height: 2rpx;
    background: #b0b0b0;
    margin-top: 50rpx;
}

.vertical {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2rpx;
    height: 100rpx;
    background: #b0b0b0;
}

.sendBtn {
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
    color: #fff;
    background: #15e4d1;
    font-size: 30rpx;
    text-align: center;
}