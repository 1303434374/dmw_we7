/* pages/more/more.wxss */
page{
  background: #fafafa;
}
.content{
  width: 700rpx;
  margin: 0 auto;
  padding-bottom: 40rpx;
}
.content-head{
  position: relative;
}
.content-head image{
  width: 100%;
  height: 300rpx;
}
.label{
  position: absolute;
  top: -5rpx;
  left: 0;
  width: 170rpx;
}
.label text{
  position: absolute;
  color: #333;
  font-size: 20rpx;
  top: 12rpx;
  left: 42rpx
}
.down{
  position: absolute;
  bottom: 10rpx;
  right: 0;
  background: linear-gradient(to bottom right, #64e8f5, #15e4d2);
  font-size: 18rpx;
  color: #333;
  border-top-left-radius: 15px;
  line-height: 40rpx;
  height: 40rpx;
  width: 360rpx;
  text-align: center;
}
.down text{
  background: #fff;
  border-radius: 5rpx;
  display: inline-block;
  width: 40rpx;
  height: 25rpx;
  margin: 8rpx 5rpx;
  text-align: center;
  line-height: 25rpx;
}
.content-foot{
  padding: 20rpx 0;
  margin-bottom: 45rpx;
  background: #fff;
  position: relative;
  top: -10rpx;
}
.content-foot text{
  font-size: 26rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 0rpx 20rpx;
  margin: 10rpx 0;
}
.content-footer{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 45rpx;
}
.order{
  width: 120rpx;
  margin-right: 8rpx;
  float: left;
}
.ulli{
  background: #f7f5ef;
  border-radius: 25px;
  padding: 5rpx 15rpx;
  color: #bfb3ab;
  display: inline-block;
  font-size: 18rpx;
  line-height:28rpx;
  float:left;
  margin:8rpx 5rpx;
}

.header-container {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 20rpx;
  background: linear-gradient(to bottom right, #64e8f5, #15e4d2);
}

.header-container .search {
	  display: flex;
    align-items: center;
    padding: 0 35rpx;
    height: 60rpx;
    background-color: #fff;
    border-radius: 40rpx;
    z-index: 2;
}

.header-container .search input {
    flex: 1;
    height: 100%;
    color: #666;
    font-size: 26rpx;
}

.header-container .search .placeholder {
  color: #b2b2b2;
}

.header-container .search image {
    width: 26rpx;
    height: 26rpx;
    margin-left: 20rpx;
}

.header-container .nav {
    display: flex;
    align-items: center;
}

.header-container .nav .item {
    flex: 1;
    color: #fff;
    font-size: 26rpx;
    padding: 30rpx 0 10rpx;
    margin-right: 20rpx;
}

.header-container .nav .item.active {
    border-bottom: 5rpx solid #fff;
}

.header-container .nav image {
    position: relative;
    top: 15rpx;
    width: 18rpx;
    height: 18rpx;
}

.nav-container {
    display: flex;
    padding: 25rpx 30rpx;
    margin-right: -30rpx;
}

.nav-container .item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 35rpx;
    border: 1px solid #b3b3b3;
    border-radius: 30rpx;
    color: #b3b3b3;
    font-size: 20rpx;
    margin-right: 30rpx;
}

.nav-container .item.active {
    color: #0adbc6;
    border: 1px solid #0adbc6;
}
